import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.stage.Stage;

public class LabyrintheInterfaceFX extends Application {

    @Override
    public void start(Stage fenetrePrincipale) {
        
        fenetrePrincipale.setTitle("Labyrinthe");
        fenetrePrincipale.setWidth(400);
        fenetrePrincipale.setHeight(450);
        fenetrePrincipale.setResizable(false);

        
        Color couleurNoir = Color.BLACK;
        Color couleurRouge = Color.rgb(200, 0, 0);
        Color couleurJaune = Color.rgb(255, 204, 0);
        Color couleurBleu = Color.rgb(0, 102, 204);

        
        Pane panneauPrincipal = new Pane();
        panneauPrincipal.setStyle("-fx-background-color: black;");

        
        Label labelTitre = new Label("LABYRINTHE");
        labelTitre.setFont(Font.font("Arial", 32));
        labelTitre.setTextFill(Color.WHITE);
        labelTitre.setLayoutX(90);
        labelTitre.setLayoutY(20);

        
        Button boutonGenerer = new Button("GÉNÉRER");
        boutonGenerer.setLayoutX(120);
        boutonGenerer.setLayoutY(70);
        boutonGenerer.setPrefSize(150, 40);
        boutonGenerer.setStyle("-fx-background-color: rgb(200,0,0); -fx-text-fill: white; -fx-focus-color: transparent;");

        
        Label labelLongueur = new Label("Longueur:");
        labelLongueur.setTextFill(couleurJaune);
        labelLongueur.setLayoutX(50);
        labelLongueur.setLayoutY(130);

        TextField champLongueur = new TextField();
        champLongueur.setLayoutX(150);
        champLongueur.setLayoutY(130);
        champLongueur.setPrefWidth(180);
        champLongueur.setStyle("-fx-background-color: rgb(0,102,204); -fx-text-fill: white;");

        
        Label labelLargeur = new Label("Largeur:");
        labelLargeur.setTextFill(couleurJaune);
        labelLargeur.setLayoutX(50);
        labelLargeur.setLayoutY(170);

        TextField champLargeur = new TextField();
        champLargeur.setLayoutX(150);
        champLargeur.setLayoutY(170);
        champLargeur.setPrefWidth(180);
        champLargeur.setStyle("-fx-background-color: rgb(0,102,204); -fx-text-fill: white;");

        
        Label labelDifficulte = new Label("Difficulté :");
        labelDifficulte.setTextFill(couleurJaune);
        labelDifficulte.setLayoutX(50);
        labelDifficulte.setLayoutY(210);

        
        RadioButton radioDifficulte1 = new RadioButton("Résolution 1");
        radioDifficulte1.setTextFill(Color.WHITE);
        radioDifficulte1.setLayoutX(50);
        radioDifficulte1.setLayoutY(240);
        radioDifficulte1.setStyle("-fx-background-color: transparent;");

        RadioButton radioDifficulte2 = new RadioButton("Résolution 2");
        radioDifficulte2.setTextFill(Color.WHITE);
        radioDifficulte2.setLayoutX(200);
        radioDifficulte2.setLayoutY(240);
        radioDifficulte2.setStyle("-fx-background-color: transparent;");

        RadioButton radioDifficulte3 = new RadioButton("Résolution 3");
        radioDifficulte3.setTextFill(Color.WHITE);
        radioDifficulte3.setLayoutX(50);
        radioDifficulte3.setLayoutY(270);
        radioDifficulte3.setStyle("-fx-background-color: transparent;");

        
        ToggleGroup groupeDifficulte = new ToggleGroup();
        radioDifficulte1.setToggleGroup(groupeDifficulte);
        radioDifficulte2.setToggleGroup(groupeDifficulte);
        radioDifficulte3.setToggleGroup(groupeDifficulte);

        
        Button boutonGenererLabyrinthe = new Button("GÉNÉRER LE LABYRINTHE");
        boutonGenererLabyrinthe.setLayoutX(60);
        boutonGenererLabyrinthe.setLayoutY(330);
        boutonGenererLabyrinthe.setPrefSize(270, 40);
        boutonGenererLabyrinthe.setFont(Font.font("Arial", 14));
        boutonGenererLabyrinthe.setStyle("-fx-background-color: rgb(200,0,0); -fx-text-fill: white; -fx-font-weight: bold; -fx-focus-color: transparent;");

        
        panneauPrincipal.getChildren().addAll(
            labelTitre,
            boutonGenerer,
            labelLongueur,
            champLongueur,
            labelLargeur,
            champLargeur,
            labelDifficulte,
            radioDifficulte1,
            radioDifficulte2,
            radioDifficulte3,
            boutonGenererLabyrinthe
        );

        // Création de la scène et affichage
        Scene scene = new Scene(panneauPrincipal);
        fenetrePrincipale.setScene(scene);
        fenetrePrincipale.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}

